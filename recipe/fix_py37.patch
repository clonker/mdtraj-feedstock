---
 mdtraj/core/trajectory.py | 2 +-
 1 file changed, 1 insertion(+), 1 deletion(-)

diff --git a/mdtraj/core/trajectory.py b/mdtraj/core/trajectory.py
index 63cd3d19..56c5afe9 100644
--- a/mdtraj/core/trajectory.py
+++ b/mdtraj/core/trajectory.py
@@ -511,7 +511,7 @@ def iterload(filename, chunk=100, **kwargs):
                     traj = f.read_as_traj(n_frames=chunk*stride, stride=stride, atom_indices=atom_indices, **kwargs)
 
                 if len(traj) == 0:
-                    raise StopIteration()
+                    return
 
                 yield traj
